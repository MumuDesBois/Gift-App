<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shape"
        android:id="@+id/cardidea">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="100dp"
                android:background="@drawable/photo_shape"
                android:layout_height="match_parent"
                android:id="@+id/cardidea_photo">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cardidea_photo_image"
                    android:background="@drawable/photo_shape" />

                <TextView
                    android:text="Adrien Mulattieri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardidea_photo_text"
                    android:textColor="#5D6266"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:layout_margin="10dp"
                    android:layout_alignParentBottom="true" />

                <ImageView
                    android:id="@+id/cardidea_photo_icon"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    app:srcCompat="@mipmap/ic_photo"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:id="@+id/cardidea_info">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardidea_info_title"
                        android:textColor="#5D6266"
                        android:textSize="18sp"
                        android:paddingBottom="5dp" />

                    <View
                        android:id="@+id/cardidea_info_underline"
                        android:layout_height="2dp"
                        android:background="@drawable/overline_gradient"
                        android:layout_width="40dp"
                        android:layout_marginBottom="15dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/cardidea_info_date">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@mipmap/ic_calendar"
                            android:id="@+id/cardidea_info_date_logo"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/cardidea_info_date_text"
                            android:textColor="#5D6266"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/cardidea_info_price">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@mipmap/ic_price"
                            android:id="@+id/cardidea_info_price_logo"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/cardidea_info_price_text"
                            android:textColor="#5D6266"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardidea_info_url">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@mipmap/ic_url"
                            android:id="@+id/cardidea_info_url_logo"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/cardidea_info_url_text"
                            android:textColor="#5D6266"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@mipmap/ic_cross"
                    android:id="@+id/cardidea_cross"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>