<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:fontFamily="Open Sans"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:text="AJOUTER UNE IDEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="30sp"
                    android:paddingTop="15dp"
                    android:textColor="#00B1FF"
                    android:paddingBottom="10dp"
                    android:textStyle="bold" />

                <View
                    android:layout_height="3dp"
                    android:background="@drawable/underline"
                    android:layout_gravity="right"
                    android:layout_width="130dp" />
            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_title"
                    android:textColor="@color/cardview_shadow_start_color"
                    android:hint="Titre"
                    android:textColorHint="@android:color/darker_gray" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_recipient"
                    android:textColor="@color/cardview_shadow_start_color"
                    android:hint="Pour qui ?"
                    android:textColorHint="@android:color/darker_gray" />

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/autoCompleteText_forwhen"
                    android:hint="Pour quand ?"
                    android:textColorHint="@android:color/darker_gray" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_photo"
                    android:textColor="@color/cardview_shadow_start_color"
                    android:hint="Photo"
                    android:textColorHint="@android:color/darker_gray" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_url"
                    android:textColor="@color/cardview_shadow_start_color"
                    android:hint="Lien URL"
                    android:textColorHint="@android:color/darker_gray" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_price"
                    android:hint="Prix"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColor="@color/cardview_shadow_start_color" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText_description"
                    android:textColor="@color/cardview_shadow_start_color"
                    android:hint="Description"
                    android:textColorHint="@android:color/darker_gray" />

                <Button
                    android:text="AJOUTER"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/submit_button" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>