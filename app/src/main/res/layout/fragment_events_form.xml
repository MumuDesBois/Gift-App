<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.adrien.gift_app.EventsFormFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_title_event"
            android:hint="Titre"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText_date_event"
            android:hint="Date dd/MM/yyyy (double cliquer)"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="date"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_place_event"
            android:hint="Lieu"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addbutton"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Ajouter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addbutton_text"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-black"
                android:textSize="30sp"
                android:textColor="#FAFAFA" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:id="@+id/addbutton_overline">

                <View
                    android:id="@+id/addbutton_overline_space"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:layout_marginRight="110dp"
                    android:layout_marginLeft="110dp"
                    android:layout_centerVertical="true"
                    android:layout_height="6dp" />

                <View
                    android:id="@+id/addbutton_overline_gradient"
                    android:layout_width="wrap_content"
                    android:background="@drawable/overline_gradient"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:layout_marginRight="110dp"
                    android:layout_marginLeft="110dp"
                    android:layout_centerVertical="true"
                    android:layout_height="6dp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cancelbutton"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="Retour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cancelbutton_text"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-black"
                android:textSize="30sp"
                android:textColor="#FAFAFA" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:id="@+id/cancelbutton_overline">

                <View
                    android:id="@+id/cancelbutton_overline_space"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:layout_marginRight="110dp"
                    android:layout_marginLeft="110dp"
                    android:layout_centerVertical="true"
                    android:layout_height="6dp" />

                <View
                    android:id="@+id/cancelbutton_overline_gradient"
                    android:layout_width="wrap_content"
                    android:background="@drawable/overline_gradient"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:layout_marginRight="110dp"
                    android:layout_marginLeft="110dp"
                    android:layout_centerVertical="true"
                    android:layout_height="6dp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
